<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="skps_services.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:skps_services.Views"
    Title="skps_services">

    <TabBar Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <Tab Icon="home.png" Title="Home">
            <ShellContent ContentTemplate="{DataTemplate views:HomeView}"/>
        </Tab>
        <Tab Icon="services.png" Title="Services">
            <ShellContent ContentTemplate="{DataTemplate views:ServicesView}"/>
        </Tab>
        <Tab Icon="about_us.png" Title="About Us">
            <ShellContent ContentTemplate="{DataTemplate views:AboutUsView}"/>
        </Tab>
    </TabBar>
</Shell>
