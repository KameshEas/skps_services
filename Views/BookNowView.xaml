<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="skps_services.Views.BookNowView">

  <StackLayout Margin="30">
    <Entry Placeholder="Name" />
    <Entry Placeholder="Phone Number" Keyboard="Telephone" />
    <Entry Placeholder="Address" />
    <Entry Placeholder="City" />
    <Entry Placeholder="State" />
    <Entry Placeholder="Pincode" Keyboard="Numeric" />
    <Picker Title="Required Service" >
      <Picker.ItemsSource>
        <x:Array Type="{x:Type x:String}">
          <x:String>Service 1</x:String>
          <x:String>Service 2</x:String>
          <x:String>Service 3</x:String>
        </x:Array>
      </Picker.ItemsSource>
    </Picker>
    <Button Text="Submit" Clicked="OnSubmitClicked" />
  </StackLayout>

</ContentPage>
    