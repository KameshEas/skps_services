<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="skps_services.Views.BookNowView">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="{Binding ProductImage}" Aspect="AspectFit" WidthRequest="200" HeightRequest="200"/>
        <Label Text="{Binding ProductDetails}" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center"/>
        <Label Text="{Binding EstimatedTime}" FontSize="16" HorizontalTextAlignment="Center"/>
        <Button Text="Book Now" Command="{Binding BookNowCommand}" BackgroundColor="{x:DynamicResource Primary}" TextColor="White" Padding="10" Margin="10"/>
    </StackLayout>
</mopups:PopupPage>
    